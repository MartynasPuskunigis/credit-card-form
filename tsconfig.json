{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "pretty": true,
        "target": "es5",
        "lib": ["es6", "dom"],
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    }
}
